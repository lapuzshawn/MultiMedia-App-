<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta http-equiv='X-UA-Compatible' content='IE=edge' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<title>Multi-Media</title>
		<link rel='stylesheet' href='/css/style.css' />
		<link rel='stylesheet' href='/css/login&signup.css' />
		<link
			href='https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css'
			rel='stylesheet'
		/>

	</head>

	<body>
		{{#if isHome}}
			<nav>
				<form action='/search'>
					<input
						type='search'
						name='query'
						id='search-input'
						placeholder='SEARCH FOR USERS'
					/>
				</form>
				<div class='login-signup'>
					{{#if logged_in}}
						<a href='/profile'><button class='profile'>
								Profile</button></a>
						<a href='/api/messages'><button id='messenger'>Messages</button></a>
						<button id='logout-button'>Logout</button>
						<script src='js/logout.js'></script>
					{{else}}
						<a href='/login'><button id='login' type='submit'>Login</button></a>
						<a href='/signup'><button
								id='signup'
								type='submit'
							>Signup</button></a>
					{{/if}}
				</div>
			</nav>
		{{else}}
			<style>
				nav { display: flex; justify-content: center; align-items: center;
				border-bottom: 2px solid;} h1 {font-size: 45px; font-weight: lighter;
				color: black;}

			</style>
			<nav>
				<a href='/' style='text-decoration: none;'><h1>Multi-Media</h1></a>

			</nav>
		{{/if}}
		<main>
			{{{body}}}
		</main>

	</body>
</html>